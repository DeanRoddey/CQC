<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE CQCDC:DevClass PUBLIC "urn:charmedquark.com:CQC-DeviceClass.DTD" "CQCDeviceClass.DTD">

<CQCDC:DevClass CQCDC:Version="1">

    <!-- General information -->
    <CQCDC:GenInfo  CQCDC:Base="CQCDevice" CQCDC:Class="Power"
                    CQCDC:Prefix="PWR" CQCDC:MUnit="Yes"
                    CQCDC:Descr="Power management"
                    CQCDC:NameType="Fixed"
                    CQCDC:Power="Yes"/>

    <CQCDC:Fields>

            <CQCDC:Field CQCDC:Name="Power">
                <CQCDC:FieldCfg CQCDC:Type="Boolean"
                                CQCDC:Access="WriteOnly" CQCDC:SemType="Power"/>
            </CQCDC:Field>


            <CQCDC:Field CQCDC:Name="Status">
                <CQCDC:FieldCfg CQCDC:Type="String"
                                CQCDC:Access="ReadOnly"
                                CQCDC:SemType="PowerState"
                                CQCDC:Limits="Enum: Off, Starting, Ready, Stopping, Failed"/>
            </CQCDC:Field>

    </CQCDC:Fields>

</CQCDC:DevClass>

